<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logogris"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logogris"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiListaDeHeroes"
        tools:targetApi="31">

        <activity
            android:name=".LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
        <activity android:name=".CreateUserActivity" />
        <activity android:name=".PersonalPageActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".CharacterCreationActivity" />
        <activity android:name=".LevelUpActivity" />
        <activity android:name=".SecondLevelUpActivity" />

    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

</manifest>