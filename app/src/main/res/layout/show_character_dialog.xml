<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPageOne"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="548dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/infoImageView"
                android:layout_width="176dp"
                android:layout_height="183dp"
                app:srcCompat="@drawable/barbarian" />

            <TextView
                android:id="@+id/charInfoStatsText"
                android:layout_width="wrap_content"
                android:layout_height="183dp"
                android:layout_weight="1"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Estadísticas" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="550dp"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/charNameText"
            android:layout_width="291dp"
            android:layout_height="63dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="428dp"
            android:gravity="center"
            android:text="Nombre del personaje"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="389dp"
            android:layout_height="70dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="384dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="418dp"
            android:layout_height="262dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/levelUpBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/levelUpBtn"
            android:layout_width="111dp"
            android:layout_height="64dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="446dp"
            android:layout_marginEnd="149dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/details"
            android:text="Subir de nivel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="111dp"
            android:layout_height="64dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="446dp"
            android:layout_marginEnd="272dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/details"
            android:text="Eliminar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/nextPageBtn"
            android:layout_width="111dp"
            android:layout_height="64dp"
            android:layout_marginStart="274dp"
            android:layout_marginTop="446dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/details"
            android:text="Siguiente página"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

