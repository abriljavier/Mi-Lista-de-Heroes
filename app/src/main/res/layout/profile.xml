        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernameEdit"
        android:layout_width="324dp"
        android:layout_height="63dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="416dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Placeholder changing on init"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="327dp"
        android:layout_height="65dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="479dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="Su nombre de usuario"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="327dp"
        android:layout_height="65dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="333dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="333dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="Su contraseÃ±a"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changePassBtn"
        android:layout_width="183dp"
        android:layout_height="93dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="502dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="136dp"
        android:backgroundTint="@color/details"
        android:fontFamily="sans-serif"
        android:text="Actualizar"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>